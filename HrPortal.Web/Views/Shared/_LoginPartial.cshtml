@using System.Security.Claims
@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav ms-auto">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">
                👤 @User.Identity.Name
            </span>
        </li>
        <li class="nav-item">
            <form asp-controller="Identity" asp-action="Logout" method="post" class="form-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-link nav-link text-dark">登出</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Login">登入</a>
        </li>
    }
</ul>